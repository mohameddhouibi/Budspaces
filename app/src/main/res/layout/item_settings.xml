<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/appbar_padding_top"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        android:textColor="@color/notif_blue"
        tools:text="@string/show_notif"/>

    <com.suke.widget.SwitchButton
        android:id="@+id/switchWidget"
        android:layout_width="45dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:sb_checked_color="@color/mainBlue"
        app:sb_checkline_color="@color/mainBlue"
        app:sb_uncheck_color="@color/mainRed"
        app:sb_uncheckcircle_color="@color/mainRed"
        app:sb_button_color="@color/white"
        app:sb_background="@color/mainRed" />
</androidx.constraintlayout.widget.ConstraintLayout>