<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_frame_shadow">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/firstPinView"
        android:layout_marginTop="@dimen/button_height"
        android:layout_marginBottom="@dimen/rounded_blue_height"
        android:textAlignment="center"
        android:fontFamily="@font/arial_regular"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="@string/enter_confirm_code"/>

    <com.chaos.view.PinView
        android:id="@+id/firstPinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintBottom_toTopOf="@id/validate"
        android:layout_marginTop="@dimen/rounded_blue_height"
        android:layout_marginBottom="@dimen/button_height"
        android:cursorVisible="true"
        android:inputType="number"
        android:padding="@dimen/appbar_padding_top"
        android:textColor="@color/mainRed"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cursorColor="@color/mainBlue"
        app:cursorWidth="@dimen/elevation"
        app:itemCount="5"
        app:itemRadius="@dimen/low_gap"
        app:itemSpacing="@dimen/low_gap"
        app:itemHeight="@dimen/space_40"
        app:itemWidth="@dimen/space_40"
        app:lineColor="@color/mainBlue"
        app:lineWidth="@dimen/elevation"
        app:viewType="rectangle" />

    <carbon.widget.ConstraintLayout
        android:id="@+id/send"
        android:layout_width="130dp"
        android:layout_height="@dimen/space_40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/validate"
        app:layout_constraintTop_toTopOf="@id/validate"
        app:carbon_elevation="@dimen/elevation"
        app:carbon_elevationShadowColor="@color/mainRed"
        app:carbon_elevationSpotShadowColor="@color/mainRed"
        app:carbon_elevationAmbientShadowColor="@color/mainRed"
        app:carbon_cornerRadius="@dimen/round_radius"
        android:background="@color/mainRed">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:fontFamily="@font/oswald_bold"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="@string/verify"/>
    </carbon.widget.ConstraintLayout>

    <carbon.widget.ConstraintLayout
        android:id="@+id/validate"
        android:layout_width="130dp"
        android:layout_height="@dimen/space_40"
        app:layout_constraintStart_toEndOf="@id/send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstPinView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/button_height"
        android:layout_marginBottom="@dimen/button_height"
        app:carbon_elevation="@dimen/elevation"
        app:carbon_elevationShadowColor="@color/mainRed"
        app:carbon_elevationSpotShadowColor="@color/mainRed"
        app:carbon_elevationAmbientShadowColor="@color/mainRed"
        app:carbon_cornerRadius="@dimen/round_radius"
        android:background="@color/mainRed">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:fontFamily="@font/oswald_bold"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="@string/validate"/>
    </carbon.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>