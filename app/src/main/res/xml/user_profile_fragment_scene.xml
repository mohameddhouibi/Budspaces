<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="750">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/constraintLayout"
               motion:framePosition="50"
               android:alpha="0.5" >
               <CustomAttribute
                   motion:attributeName="alpha"
                   motion:customFloatValue="0" />
           </KeyAttribute>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/location"
            motion:layout_constraintStart_toStartOf="@id/startTxtGuide">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/interestsBtn"
            motion:layout_constraintEnd_toEndOf="@id/endGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/interestsTxt"
            motion:layout_constraintTop_toTopOf="@id/interestsTxt">
            <CustomAttribute
                motion:attributeName="rotation"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/expandedArrow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/round_radius"
            motion:layout_constraintTop_toBottomOf="@id/constraintLayout"
            android:layout_marginTop="@dimen/activity_horizontal_margin">
            <CustomAttribute
                motion:attributeName="rotation"
                motion:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@id/startTxtGuide"
            motion:layout_constraintTop_toBottomOf="@id/location"
            android:layout_marginTop="@dimen/big_space">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/interestsBtn"
            motion:layout_constraintEnd_toEndOf="@id/endGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/interestsTxt"
            motion:layout_constraintTop_toTopOf="@id/interestsTxt">
            <CustomAttribute
                motion:attributeName="rotation"
                motion:customFloatValue="180" />
        </Constraint>
        <Constraint
            android:id="@+id/expandedArrow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/round_radius"
            motion:layout_constraintTop_toBottomOf="@id/constraintLayout"
            android:layout_marginTop="@dimen/activity_horizontal_margin">
            <CustomAttribute
                motion:attributeName="rotation"
                motion:customFloatValue="180" />
        </Constraint>
        <Constraint
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            motion:layout_constraintTop_toBottomOf="@id/chips" />
    </ConstraintSet>
</MotionScene>